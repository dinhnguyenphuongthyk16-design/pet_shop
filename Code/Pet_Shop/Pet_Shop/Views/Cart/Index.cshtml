@section Scripts {
    <script>
        $(document).ready(function() {
            updateCartSummary();
        });

        function quickAddToCart(productId) {
            const $btn = $(`button[onclick="quickAddToCart(${productId})"]`);
            const originalHtml = $btn.html();
            $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i>');

            $.ajax({
                url: '@Url.Action("AddToCart", "Cart")',
                type: 'POST',
                data: {
                    productId: productId,
                    quantity: 1
                },
                success: function (response) {
                    if (response.success) {
                        showToast('ƒê√£ th√™m s·∫£n ph·∫©m g·ª£i √Ω v√†o gi·ªè h√†ng', 'success');

                        if (response.cartCount !== undefined) {
                            $('#cartCount').text(response.cartCount);
                            if (response.cartCount > 0) $('#cartCount').show();
                        }

                        updateCartSummary();
                    } else {
                        showToast(response.message || 'Kh√¥ng th·ªÉ th√™m s·∫£n ph·∫©m', 'error');
                    }
                },
                error: function () {
                    showToast('C√≥ l·ªói x·∫£y ra khi th√™m s·∫£n ph·∫©m', 'error');
                },
                complete: function () {
                    $btn.prop('disabled', false).html(originalHtml);
                }
            });
        }

        function updateQuantity(productId, quantity) {
            quantity = parseInt(quantity);
            
            if (isNaN(quantity) || quantity < 1) {
                if (quantity === 0) {
                    removeItem(productId);
                    return;
                }
                quantity = 1;
            }

            const $cartItem = $('.cart-item[data-product-id="' + productId + '"]');
            const $quantityInput = $cartItem.find('input[type="number"]');
            const maxQuantity = parseInt($quantityInput.attr('max')) || 999;
            
            if (quantity > maxQuantity) {
                showToast('S·ªë l∆∞·ª£ng v∆∞·ª£t qu√° s·ªë h√†ng c√≥ s·∫µn', 'warning');
                $quantityInput.val($quantityInput.attr('value') || 1);
                return;
            }

            $cartItem.find('.quantity-controls button').prop('disabled', true);

            $.ajax({
                url: '@Url.Action("UpdateQuantity", "Cart")',
                type: 'POST',
                data: {
                    productId: productId,
                    quantity: quantity
                },
                success: function(response) {
                    if (response.success) {
                        $quantityInput.val(quantity);
                        updateItemTotal(productId, quantity);
                        updateCartSummary();
                        showToast('ƒê√£ c·∫≠p nh·∫≠t s·ªë l∆∞·ª£ng', 'success');
                    } else {
                        const currentValue = $quantityInput.attr('value') || $quantityInput.val();
                        $quantityInput.val(currentValue);
                        showToast(response.message || 'Kh√¥ng th·ªÉ c·∫≠p nh·∫≠t s·ªë l∆∞·ª£ng', 'error');
                    }
                },
                error: function(xhr, status, error) {
                    const currentValue = $quantityInput.attr('value') || $quantityInput.val();
                    $quantityInput.val(currentValue);
                    showToast('C√≥ l·ªói x·∫£y ra khi c·∫≠p nh·∫≠t s·ªë l∆∞·ª£ng', 'error');
                    console.error('Error updating quantity:', error);
                },
                complete: function() {
                    $cartItem.find('.quantity-controls button').prop('disabled', false);
                }
            });
        }

        function updateItemTotal(productId, quantity) {
            const $cartItem = $('.cart-item[data-product-id="' + productId + '"]');
            const $priceInfo = $cartItem.find('.price-info');
            
            let priceText = $priceInfo.find('.fw-bold').first().text();
            let price = parseFloat(priceText.replace(/[^\d]/g, '')) || 0;
            
            if (price === 0) {
                priceText = $priceInfo.find('.text-decoration-line-through').text();
                price = parseFloat(priceText.replace(/[^\d]/g, '')) || 0;
            }
            
            const total = quantity * price;
            
            const $totalCell = $cartItem.find('td').eq(4);
            $totalCell.find('.fw-bold').text(total.toLocaleString('vi-VN') + ' ‚Ç´');
        }

        function removeItem(productId) {
            if (confirm('B·∫°n c√≥ ch·∫Øc ch·∫Øn mu·ªën x√≥a s·∫£n ph·∫©m n√†y kh·ªèi gi·ªè h√†ng?')) {
                const $cartItem = $('.cart-item[data-product-id="' + productId + '"]');
                $cartItem.find('button').prop('disabled', true);
                
                $.ajax({
                    url: '@Url.Action("RemoveItem", "Cart")',
                    type: 'POST',
                    data: { productId: productId },
                    success: function(response) {
                        if (response.success) {
                            $cartItem.fadeOut(300, function() {
                                $(this).remove();
                                updateCartSummary();
                                if ($('.cart-item').length === 0) {
                                    setTimeout(function() {
                                        location.reload();
                                    }, 500);
                                }
                            });
                            showToast('ƒê√£ x√≥a s·∫£n ph·∫©m', 'success');
                        } else {
                            $cartItem.find('button').prop('disabled', false);
                            showToast(response.message || 'Kh√¥ng th·ªÉ x√≥a s·∫£n ph·∫©m', 'error');
                        }
                    },
                    error: function() {
                        $cartItem.find('button').prop('disabled', false);
                        showToast('C√≥ l·ªói x·∫£y ra khi x√≥a gi·ªè h√†ng', 'error');
                    }
                });
            }
        }

        function clearCart() {
            if (confirm('B·∫°n c√≥ ch·∫Øc ch·∫Øn mu·ªën x√≥a t·∫•t c·∫£ s·∫£n ph·∫©m kh·ªèi gi·ªè h√†ng?\nT·∫•t c·∫£ s·∫£n ph·∫©m trong gi·ªè h√†ng s·∫Ω b·ªã x√≥a v√† kh√¥ng th·ªÉ kh√¥i ph·ª•c.')) {
                $('.quantity-controls button, .btn-outline-danger').prop('disabled', true);
                
                $.ajax({
                    url: '@Url.Action("ClearCart", "Cart")',
                    type: 'POST',
                    success: function(response) {
                        if (response.success) {
                            showToast('ƒê√£ x√≥a t·∫•t c·∫£ s·∫£n ph·∫©m', 'success');
                            setTimeout(function() {
                                location.reload();
                            }, 500);
                        } else {
                            $('.quantity-controls button, .btn-outline-danger').prop('disabled', false);
                            showToast(response.message || 'Kh√¥ng th·ªÉ x√≥a gi·ªè h√†ng', 'error');
                        }
                    },
                    error: function() {
                        $('.quantity-controls button, .btn-outline-danger').prop('disabled', false);
                        showToast('C√≥ l·ªói x·∫£y ra khi x√≥a gi·ªè h√†ng', 'error');
                    }
                });
            }
        }

        function applyPromoCode() {
            const promoCode = $('#promoCode').val();
            if (!promoCode) {
                showToast('Vui l√≤ng nh·∫≠p m√£ gi·∫£m gi√°', 'warning');
                return;
            }

            showToast('ƒêang ki·ªÉm tra m√£ gi·∫£m gi√°...', 'info');
        }

        function increaseQuantity(productId) {
            const $cartItem = $('.cart-item[data-product-id="' + productId + '"]');
            const $quantityInput = $cartItem.find('.quantity-input');
            const currentQuantity = parseInt($quantityInput.val()) || 1;
            const maxQuantity = parseInt($quantityInput.attr('max')) || 999;
            
            if (currentQuantity < maxQuantity) {
                const newQuantity = currentQuantity + 1;
                $quantityInput.val(newQuantity);
                updateQuantity(productId, newQuantity);
            } else {
                showToast('S·ªë l∆∞·ª£ng ƒë√£ ƒë·∫°t t·ªëi ƒëa', 'warning');
            }
        }

        function decreaseQuantity(productId) {
            const $cartItem = $('.cart-item[data-product-id="' + productId + '"]');
            const $quantityInput = $cartItem.find('.quantity-input');
            const currentQuantity = parseInt($quantityInput.val()) || 1;
            
            if (currentQuantity > 1) {
                const newQuantity = currentQuantity - 1;
                $quantityInput.val(newQuantity);
                updateQuantity(productId, newQuantity);
            } else {
                removeItem(productId);
            }
        }

        function updateCartSummary() {
            let subtotal = 0;
            $('.cart-item').each(function() {
                const quantity = parseInt($(this).find('.quantity-input').val()) || 1;
                const priceText = $(this).find('.price-info .fw-bold').text();
                const price = parseFloat(priceText.replace(/[^\d]/g, '')) || 0;
                subtotal += quantity * price;
            });

            const shippingFee = subtotal > 500000 ? 0 : 30000;
            const total = subtotal + shippingFee;

            $('#subtotal').text(subtotal.toLocaleString('vi-VN') + ' ‚Ç´');
            $('#shippingFee').text(shippingFee.toLocaleString('vi-VN') + ' ‚Ç´');
            $('#totalAmount').text(total.toLocaleString('vi-VN') + ' ‚Ç´');
        }

        function showToast(message, type) {
            const toastClass = type === 'success' ? 'alert-success' : 
                              type === 'error' ? 'alert-danger' : 
                              type === 'warning' ? 'alert-warning' : 'alert-info';
            
            const toast = $(`
                <div class="alert ${toastClass} alert-dismissible fade show position-fixed" 
                     style="top: 20px; right: 20px; z-index: 9999;">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `);
            
            $('body').append(toast);
            setTimeout(() => toast.alert('close'), 3000);
        }
    </script>
}

